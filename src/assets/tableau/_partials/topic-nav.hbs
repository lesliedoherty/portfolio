<div class="topic-nav">
  {{#if tabs}}
    <ul class="topic-nav__tabs">
      {{#each tabs}}
        <li><a href="#" {{#if class}}class="{{ class }}"{{/if}} data-tab-content="{{ id }}">{{{ label }}}</a></li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if drawers}}
    <div class="topic-nav__drawers" id="topic-nav-container">
      {{#each drawers}}
        <div class="topic-nav__drawer {{#if class}}{{ class }}{{/if}}" id="{{ id }}">
          <div class="content-container">
            {{#if segments}}
              <ul class="topic-nav__topic-list">
                {{#each segments}}
                  <li>
                    <span class="text--label">{{ label }}</span>
                    <ul class="topic-nav__topic-segment">
                      {{#each topics}}
                        <li><a href="{{ url }}">{{ label }}</a></li>
                      {{/each}}
                    </ul>
                  </li>
                {{/each}}
              </ul>
            {{/if}}
            {{#if topics}}
              <ul class="topic-nav__topic-list">
                {{#each topics}}
                  <li><a href="{{ url }}">{{ label }}</a></li>
                {{/each}}
              </ul>
            {{/if}}
            {{#if search}}
              {{> contextual-search search}}
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <div class="topic-nav__toggle-wrapper">
    <a href="#" class="topic-nav__toggle" data-reveal-target="topic-nav-container" data-reveal-media="markup"></a>
  </div>
</div>
