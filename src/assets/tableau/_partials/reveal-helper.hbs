<div class="reveal__content" id="{{ contentId }}">
  <div class="clearfix{{#if container}} content-container{{/if}}">
    {{#if video}}
      <div style="display: block; position: relative; max-width: 100%;">
        <div style="display: block; padding-top: 56%;">
          <video data-video-id="{{ video }}" data-account="{{ account }}" data-player="{{ player }}" data-embed="{{ embed }}" class="video-js" controls="" style="width: 100%; height: 100%; position: absolute; top: 0px; bottom: 0px; right: 0px; left: 0px;"></video>
          <script src="//players.brightcove.net/{{ account }}/{{ player }}_{{ embed }}/index.min.js"></script>
        </div>
      </div>
    {{else}}
      {{{ content }}}
    {{/if}}
  </div>
</div>
