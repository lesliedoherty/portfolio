<div class="accordion {{ modifier_class }}">
  {{#each items}}
    <div class="accordion__item">
      <div class="accordion__title-wrapper">
        <div class="accordion__title">
          {{{ title }}}
        </div>
      </div>
      <div class="accordion__content-wrapper">
        <div class="accordion__content">
          {{{ content }}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
